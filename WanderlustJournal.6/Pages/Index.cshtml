@page
@model IndexModel
@{
    ViewData["Title"] = "Welcome to Wanderlust Journal";
}

<div class="text-center hero-section">
    <h1 class="display-4">Wanderlust Journal</h1>
    <p class="lead">Capture and relive your travel adventures</p>
    <div class="mt-4">
        <a asp-page="/Journal/Index" class="btn btn-primary btn-lg">View All Entries</a>
        <a asp-page="/Journal/Create" class="btn btn-success btn-lg ms-3">Add New Memory</a>
    </div>
</div>

<div class="row mt-5">
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-journal-richtext"></i> Record Memories</h5>
                <p class="card-text">Preserve the details of your travels - locations, dates, and special moments that made each trip unique.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-globe"></i> Track Adventures</h5>
                <p class="card-text">Build your personal collection of destinations and experiences from around the world.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-heart"></i> Relive Journeys</h5>
                <p class="card-text">Revisit your favorite travel moments whenever you want, all in one beautifully organized place.</p>
            </div>
        </div>
    </div>
</div>
