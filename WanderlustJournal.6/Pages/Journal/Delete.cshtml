@page "{id:int}"
@model WanderlustJournal.Pages.Journal.DeleteModel
@{
    ViewData["Title"] = "Delete Memory";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">Delete Travel Memory</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i> 
                        Are you sure you want to delete this memory? This action cannot be undone.
                    </div>

                    <div class="mb-4">
                        <h4>@Model.JournalEntry.Title</h4>
                        <p class="text-muted">
                            <i class="bi bi-geo-alt"></i> @Model.JournalEntry.Location<br />
                            <i class="bi bi-calendar"></i> @Model.JournalEntry.DateVisited.ToString("MMMM d, yyyy")
                        </p>
                        <p style="white-space: pre-line">@Model.JournalEntry.Notes</p>
                    </div>

                    <form method="post">
                        <input type="hidden" asp-for="JournalEntry.Id" />
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="./Details" asp-route-id="@Model.JournalEntry.Id" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete Forever
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>