@page "{id:int}"
@model WanderlustJournal.Pages.Journal.DetailsModel
@{
    ViewData["Title"] = Model.JournalEntry.Title;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">@Model.JournalEntry.Title</h2>
                    <span class="badge bg-light text-dark">@Model.JournalEntry.DateVisited.ToString("MMMM d, yyyy")</span>
                </div>
                <div class="card-body">
                    <h4 class="card-subtitle mb-3 text-muted">
                        <i class="bi bi-geo-alt-fill"></i> @Model.JournalEntry.Location
                    </h4>
                    
                    <div class="card-text mb-4">
                        <h5 class="text-secondary"><i class="bi bi-journal-text"></i> Memories</h5>
                        <p style="white-space: pre-line">@Model.JournalEntry.Notes</p>
                    </div>
                    
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-page="./Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <div>
                            <a asp-page="./Edit" asp-route-id="@Model.JournalEntry.Id" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-page="./Delete" asp-route-id="@Model.JournalEntry.Id" class="btn btn-danger ml-2">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>